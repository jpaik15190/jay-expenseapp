<h2>Change your password</h2>
<br />
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:class => 'nice', :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div><%= f.label :password, "New password" %>
  <%= f.password_field :password, class: 'input-text' %></div>

  <div><%= f.label :password_confirmation, "Confirm new password" %>
  <%= f.password_field :password_confirmation, class: 'input-text' %></div>

  <div><%= f.submit "Change my password", class: 'nice medium radius blue button' %></div>
<% end %>
<br />
<%= render "links" %>