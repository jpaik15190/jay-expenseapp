  <title>Expense Tracker</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  
  <%= javascript_include_tag "application" %>

  <%= csrf_meta_tags %>

  

</head>
<body style="background-color: #EDEDED">



<div class='panel' style = "height: 50px" >
	<div class="container">
		<a href="http://jay-expenses.herokuapp.com/" class="logo">Expense Tracker</a>
		<% if user_signed_in? %>
			<%= link_to 'Logout', destroy_user_session_path, class: 'nice radius small red button right', method: :delete %>
			<div class='right'>&nbsp&nbsp</div>
			<%= link_to 'Preferences', edit_user_path(current_user), class: 'nice radius small black button right' %></li>
			<div class='right'>&nbsp&nbsp</div>
		<% end %>
		<a href="#" data-reveal-id="myModal" data-closeonbackgroundclick="true" class="nice radius small black button right">About</a>
	</div>
</div>


<div class="container">

	<% if notice %>
	<div class='alert-box success'>
		<%= notice %>
		<a href="" class="close">&times;</a>
	</div>
	<% end %>

	<% if alert %>
    <div class='alert-box error'>
    	<%= alert %>
    	<a href="" class="close">&times;</a>
    </div>
    <% end %>

	<% if user_signed_in? %>
		<div class="row">
			<div class="ten columns centered">
				<div class="row">
					<div class="six columns">
					    <%= yield %>
					</div>
					<div class="six columns end">
						<%= render 'household' %>
					</div>
				</div>
			</div>
		</div>
    
	<% else %>
		<div class='row'>
			<div class='six columns centered'>
				<div style="width: 260px;
					margin: auto;
					padding: 20px" 
					class='panel'>
				<%= yield %>
				</div>
			</div>
	    </div>
	<% end %>
</div>



<div id="myModal" class="reveal-modal">
	<h2>About</h2>
    <h6>
    	Expense Tracker is a useful and convenient solution to managing your day-to-day expenses. Developed for CIS 196: Ruby on Rails Web Development at UPenn, Spring 2012.
    </h6>
    <br /><br />
    <div>
    	<h3>Frameworks</h3>
     	<div class='panel box_element' style="margin-right: 10px">
     		<center>
	     		<a href="http://rubyonrails.org/" target="_blank">
	     			<img src="/assets/rails.png"></img><br/>
	     			Ruby on Rails
	     		</a>
     		</center>
        </div>
     	<div class='panel box_element'>
     		<center>
	     		<a href="http://foundation.zurb.com/" target="_blank">
	     			<img src="/assets/foundation-yeti.png"></img><br/>
	     			Foundation
	     		</a>
	     	</center>
     	</div>
    </div>
     
    <a class="close-reveal-modal">&#215;</a>
</div>

</body>
</html>
