<body>

	<!-- container -->
	<div class="container">

		<div class="row">
			<div class="twelve columns">
				<h1>Expense Tracker</h1>
				<h4 class="subheader">Keep track of your spending!</h4>
				<hr />
			</div>
		</div>

		<div class="row">
			<!--
			<div class="two columns">
				<dl class="nice tabs vertical hide-on-phones">
					<dd><a href="/purchases" class="active">Purchases</a></dd>
