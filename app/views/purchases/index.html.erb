			<div class="eight columns">
			
<p><h4>Purchases</h4></p>

<table>
<thead>
  <tr>
    <th>Description</th>
    <th>Amount</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
</thead>

<tbody>
<% @purchases.each do |purchase| %>
  <tr>
  	<!--<td><%= check_box_tag(purchase) %></td>-->
    <td><%= purchase.description %></td>
    <td><%= purchase.amount %></td>
    <td><%= link_to purchase.user.name, purchase.user %></td>
    <td><%= link_to 'Show', purchase %></td>
    <td><%= link_to 'Edit', edit_purchase_path(purchase) %></td>
    <td><%= link_to 'Destroy', purchase, confirm: 'Are you sure?', method: :delete %></td>
    
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to 'New Purchase', new_purchase_path, class: 'nice small radius white button' %>
				
			
