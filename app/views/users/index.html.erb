<body>

	<!-- container -->
	<div class="container">

		<div class="row">
			<div class="twelve columns">
				<h1>Expense Tracker</h1>
				<h4 class="subheader">Keep track of your spending!</h4>
				<hr />
			</div>
		</div>

		<div class="row">
			<div class="two columns">
				<dl class="nice tabs vertical hide-on-phones">
					<dd><a href="/purchases">Purchases</a></dd>
					<dd><a href="/users" class="active">Users</a></dd>
					<dd><a href="/households">Households</a></dd>
				</dl>
			</div>
			<div class="six columns">


<p><h4>Users</h4></p>

<table>
<thead>
  <tr>
    <th></th>
    <th>Name</th>
    <th>Email</th>
    <th>Household</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
</thead>

<tbody>
<% @users.each do |user| %>
  <tr>
  	<td><%= check_box_tag(user) %></td>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= link_to user.household, user.household %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to 'New User', new_user_path, class: 'nice small radius white button' %>

			</div>
			
			<div class="four columns">
				<p><h4>Notifications</h4></p>
				<%= radio_button_tag(:notify, "Yes") %>
				<%= label_tag(:notify_yes, "Yes") %>
				<%= radio_button_tag(:notify, "No") %>
				<%= label_tag(:notify_no, "No") %>
			</div>
		</div>
		</div>

	</div>
	<!-- container -->




	<!-- Included JS Files -->
	<script src="assets/foundation.js"></script>
	<script src="assets/app.js"></script>

</body>
</html>
